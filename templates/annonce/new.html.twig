{% extends 'base.html.twig' %}

{% block title %} Création d'une annonce{% endblock %}

{% form_theme form 'annonce/_collection.html.twig' %}

{% block body %}

<div class="container">
	<h1 class="my-5"><i class="fas fa-bullhorn"></i> Créer votre annonce :</h1>
	
	{{ form_start(form) }}
	
	<div class="row">
		<div class="col">
			<div class="alert alert-light">
				<h2><i class="fas fa-info-circle"></i> Informations générales :</h2>
				<hr>
				{{ form_row(form.title) }}
				{{ form_row(form.price) }}
			</div>
			<div class="alert alert-light">
				<h2><i class="fas fa-file-alt"></i> Détails de l'annonce :</h2>
				<hr>
				{{ form_row(form.introduction) }}
			</div>
		</div>
		<div class="col">
			<div class="alert alert-light">
				<h2><i class="far fa-images"></i> Images de l'annonce :</h2>
				<hr>
				{{ form_row(form.coverImage) }}
				{{ form_row(form.images) }}
			</div>
		</div>
	</div>
	
	<button class="btn btn-primary" type="submit"><i class="far fa-check-circle"></i> Créer la nouvelle annonce</button>
	
	{{ form_end(form) }}
</div>

{% endblock %}

{% block javascripts %}
<script src="/build/js/annonce.js"></script>
{% endblock %}






