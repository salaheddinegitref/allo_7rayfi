{% extends 'admin/base.html.twig' %}

{% block title %}Administration des commandes {% endblock %}

{% block body %}
<div class="container-fluid">
	<h1 class="my-5"><i class="fas fa-folder-open"></i> Gestion des commandes :</h1>
	<table class="table table-hover">
		<thead>
			<tr>
				<th>Id</th>
				<th>Date</th>
				<th>Client</th>
				<th>Annonce</th>
				<th>Prix en (DH)</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			{% for achat in pagination.data %}
			<tr>
				<td>{{ achat.id }}</td>
				<td>{{ achat.createdAt|date('d/m/Y H:i') }}</td>
				<td>
					<img src="{{ achat.buyer.picture }}" alt="image de l'auteur" class="avatar avatar-micro">
					 {{ achat.buyer.fullName }}
				</td>
				<td>{{ achat.annonce.title }}</td>
				<td>{{ achat.amount }}</td>
				<td>
					<a href="{{ path('admin_achats_edit', {'id': achat.id}) }}" class="btn btn-primary"><i class="fas fa-pen"></i></a>
					<a href="{{ path('admin_achats_delete', {'id': achat.id}) }}" class="btn btn-danger"><i class="far fa-trash-alt"></i></a>
				</td>
			</tr>	
			{% endfor %}
		</tbody>
	</table>
    {{ pagination.display() }}
</div>
{% endblock %}
