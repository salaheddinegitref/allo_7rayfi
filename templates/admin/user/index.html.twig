{% extends 'admin/base.html.twig' %}

{% block title %}Administration des utilisateurs {% endblock %}

{% block body %}
<div class="container-fluid">
	<h1 class="my-5"><i class="fas fa-users"></i> Gestion des utilisateurs :</h1>
	<table class="table table-hover">
		<thead>
			<tr>
				<th>Id</th>
				<th>Prénom</th>
				<th>Nom</th>
				<th>E-mail</th>
				<th>Âge</th>
				<th>Adresse</th>
				<th>Téléphone</th>
				<th>Présentation</th>
			</tr>
		</thead>
		<tbody>
			{% for user in pagination.data %}
			<tr>
				<td>{{ user.id }}</td>
				<td>{{ user.firstName }}</td>
				<td>{{ user.lastName }}</td>
				<td>{{ user.email }}</td>
				<td>{{ user.age }}</td>
				<td>{{ user.address }}</td>
				<td>{{ user.phone }}</td>
				<td>{{ user.introduction }}</td>
				<td>
					<a href="{{ path('admin_users_edit', {'id': user.id}) }}" class="btn btn-primary"><i class="fas fa-pen"></i></a>
					<a href="{{ path('admin_users_delete', {'id': user.id}) }}" class="btn btn-danger"><i class="far fa-trash-alt"></i></a>
				</td>
			</tr>	
			{% endfor %}
		</tbody>
	</table>
    {{ pagination.display() }}
</div>
{% endblock %}
