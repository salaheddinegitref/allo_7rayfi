{% extends 'base.html.twig' %}

{% block title %}Modification du profile utilisateur{% endblock %}

{% block body %}
<div class="container">
	<h1 class="my-5"><i class="fas fa-user-edit"></i> Modification du profile :</h1>
	
	{{ form_start(form) }}
	<div class="row">
		<div class="col">
			<div class="alert alert-light">
				<h2 class="alert-heading"><i class="fas fa-info-circle"></i> Informations générales :</h2>
    			<hr>
    			{{ form_row(form.firstName) }}
    			{{ form_row(form.lastName) }}
    			{{ form_row(form.email) }}
    			{{ form_row(form.age) }}			
			</div>	
		</div>
		<div class="col">
			<div class="alert alert-light">
				<h2 class="alert-heading"><i class="fas fa-file-alt"></i> Détails :</h2>
    			<hr>
    			{{ form_row(form.phone) }}
    			{{ form_row(form.address) }}
    			{{ form_row(form.introduction) }}
    			{{ form_row(form.picture) }}
    			<hr>
    			<p>Vous avez terminé vos modification ? Vous pouvez les sauvgarder !</p>
    			<button type="submit" class="btn btn-primary"><i class="far fa-check-circle"></i> Enregistrer les modifications </button>		
			</div>	
		</div>
	</div>
	
	{{ form_end(form) }}
</div>
{% endblock %}